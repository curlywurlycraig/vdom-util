{
    "name": "vdom-util",
    "version": "0.5.0",
    "description": "Simple a light utilities for updating the DOM.",
    "main": "out/index.js",
    "scripts": {
        "build": "esbuild --bundle --outdir=out --jsx-factory=hic src/demo.jsx",
        "build-test": "esbuild --bundle --outdir=out --jsx-factory=hic src/test.jsx",
        "build-min": "esbuild --bundle --minify --outdir=out --jsx-factory=hic src/demo.jsx",
        "build-util-min": "esbuild --minify --outdir=out src/vdom.ts",
        "build-util": "esbuild --outdir=out src/vdom.ts",
        "serve": "npx http-server"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/curlywurlycraig/vdom-util.git"
    },
    "keywords": [
        "dom",
        "vdom",
        "virtualdom",
        "virtual",
        "JSX",
        "react",
        "preact"
    ],
    "author": "Craig Wilkinson",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/curlywurlycraig/vdom-util/issues"
    },
    "homepage": "https://github.com/curlywurlycraig/vdom-util#readme",
    "devDependencies": {
        "esbuild": "^0.14.25"
    }
}
